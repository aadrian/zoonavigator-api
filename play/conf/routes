GET           /healthcheck            controllers.HomeController.getHealthCheck()

GET           /znode                  controllers.ZNodeController.get(path: ZNodePath)
GET           /znode/children         controllers.ZNodeController.getChildren(path: ZNodePath)

POST          /znode                  controllers.ZNodeController.create(path: ZNodePath)
DELETE        /znode                  controllers.ZNodeController.delete(path: ZNodePath, version: ZNodeDataVersion)
POST          /znode/duplicate        controllers.ZNodeController.duplicate(source: ZNodePath, destination: ZNodePath)
POST          /znode/move             controllers.ZNodeController.move(source: ZNodePath, destination: ZNodePath)
DELETE        /znode/children         controllers.ZNodeController.deleteChildren(path: ZNodePath, names: List[String])
PUT           /znode/acl              controllers.ZNodeController.updateAcl(path: ZNodePath, version: ZNodeAclVersion, recursive: Option[Boolean])
PUT           /znode/data             controllers.ZNodeController.updateData(path: ZNodePath, version: ZNodeDataVersion)

POST          /zsession               controllers.ZSessionController.create()
DELETE        /zsession               controllers.ZSessionController.delete()
